<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Reset Password</title>
  <link rel="stylesheet" href="/stylesheets/f-email.css" />
</head>
<body>
  <div class="container">
    <h2>Reset Your Password</h2>
    <form action="/forgot-password" method="POST">
      <label for="email">Enter Your Registered Email</label>
      <input type="email" name="email" id="email" placeholder="you@example.com" required />
      <button type="submit">Send OTP</button>
    </form>
  </div>
  <script>
    const params = new URLSearchParams(window.location.search);
     if (params.has('errorNoAccFound')) {
    alert(params.get('errorNoAccFound'));
  }
   if (params.has('otpErrorForgotPass')) {
    alert(params.get('otpErrorForgotPass'));
   }
   if (params.has('otpErrorIncorrect')) {
    alert(params.get('otpErrorIncorrect'));
   }
  </script>
</body>
</html>
